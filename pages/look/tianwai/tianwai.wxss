/* pages/look/hongmen/hongmen.wxss */

.head{
  height: 40rpx;
  text-align: center;
  padding-top: 20rpx;
  color: rgb(116, 178, 248);
  background-color : rgb(186,249,246);
  font-style: italic;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  font-size: 36rpx;
  font-stretch: ultra-expanded;
  font-weight:bold;
}
image{
  height: 350rpx;
  width: 80%;
  position: relative;
  left: 10%;
  border-radius: 20rpx;
}
.picture{
  padding-top: 30rpx;
  background-color: rgb(186,249,246);
}
.content{
  background-color: rgb(186,249,246);
  height: 100%;
  width: 100%;
  padding: 30rpx 0 85rpx 0;
}

.content .incontent{
  background-color: rgb(253,253,253);
  position: relative;
  margin: 0rpx 30rpx 35rpx 30rpx;
  box-shadow:  0 4rpx 8rpx 0 rgba(227,232,236), 0 6px 20px 0 rgba(227,232,236);
  border-radius: 20rpx;
  padding: 10rpx 25rpx 25rpx 25rpx;
  
}

.content .write{
  width: auto;
  height: auto;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
}

.content .title{
  font-weight: bold;
  font-size: 40rpx;
  font-family: Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;
  line-height: 40px;
}

.title::before {
  content: '|';
  color: #2a9e94;
  font-size: 25px;
  vertical-align: 0px;
  margin-right: 10px;
}