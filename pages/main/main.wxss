/* pages/main/main.wxss */
.container{
  width: 100%;
  height: 100%;
  background-color: aqua;
  padding: 0px;
}

/*文字轮播图 */
.swiper_container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  width: 100%;
  color: gray;
  background-color:skyblue;
}
.swiper_item {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight:400;
  padding-top: 15rpx;
}

/*轮播图*/
.content-info-slide{
  height:400rpx;
}
.content-info-slide image{
  width: 100%;
  height: 100%;
}

/*天气预报 */
page {
  background-color: linear-gradient(to bottom, #ffffff,#ffffff, #F6F6F6);
}

/* 工具类 */
.row {
  display: flex;
  align-items: center;
}

.mb-32{
  margin-bottom: 32rpx;
}

/* 页面样式 */
.header-modular {
  height: 200rpx;
  background-color: #64C8FA;
  background: linear-gradient(to bottom, #56CCF2, #2F80ED);
  position: relative;
  padding: 30rpx;
}

.header-modular .location-wrap {
  color: #ffffff;
  font-weight: bold;
  font-size: 30rpx;
}

.header-modular .location-wrap .icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}

.header-modular .tmp {
  font-size: 100rpx;
  /* font-weight: bold; */
  color: #ffffff;
  margin-right: auto;
}

.header-modular .icon-weather {
  width: 130rpx;
  height: 130rpx;
}

.header-modular .tips-wrap {
  display: flex;
  justify-content: space-between;
}

.header-modular .tips {
  font-size: 26rpx;
  opacity: 0.8;
  color: #ffffff;
  flex: 1;
}

.header-modular .tips:nth-child(3) {
  text-align: right;
}

.header-modular .tips:nth-child(2) {
  text-align: center;
}

/*星战动画*/
.container{
  position: relative;
  background-color: #000;
}
.content{
  position: relative;
  width:500rpx;
  perspective:500rpx;
}
.content-word{
  position: absolute;
  width:330rpx;
  height:380rpx;
  color: #0084ff;
  transform-origin: center top;-webkit-transform-origin:center top;
  transform: rotateX(60deg);
-webkit-transform:rotateX(60deg);
  left:50%;
  margin-left:-170rpx;
  text-align: center;
  font-size:20rpx;
  overflow: hidden;
}
.content-move{
  top:100%;
  position: absolute;
  -webkit-animation:wordMove 50s both;
  -o-animation:wordMove 50s both;
  animation:wordMove 50s both;
}
@keyframes wordMove {
  0%{
    top:100%;
  }
  100%{
    top:-100%;
  }
}
@-webkit-keyframes wordMove {
  0%{
    top:100%;
  }
  100%{
    top:-100%;
  }
}