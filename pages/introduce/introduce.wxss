/* pages/introduce/introduce.wxss */
page{
  height: 100%;
  width: 100%;
  background-color: linear-gradient(to bottom, #639447cb, #6d9c37be);
}
.abc{
  background-color: rgb(238,242,252);
  width: 100%;
  height: 400rpx;
}

.abc .abcc{
  background-color: rgb(253,253,253);
  position: relative;
  margin: 28rpx 30rpx 30rpx 30rpx;
  box-shadow:  0 4rpx 8rpx 0 rgba(227,232,236), 0 6px 20px 0 rgba(227,232,236);
  border-radius: 20rpx;
  padding: 0 25rpx 0rpx 25rpx;
}

.abc .abccc{
  width: auto;
  height: auto;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
}
.head{
  font-size: 40rpx;
  font-weight: 600;
}
.div{
  text-align: center;
}