/* pages/introduce/introduce.wxss */
page{
  height: 100%;
  width: 100%;
  background-color: linear-gradient(to bottom, #639447cb, #6d9c37be);
}


.content{
  background-color: rgb(229, 234, 247);
  height: 100%;
  width: 100%;
  padding: 30rpx 0 30rpx 0;
}

.content .incontent{
  background-color: rgb(253,253,253);
  position: relative;
  margin: 0rpx 30rpx 0rpx 30rpx;
  box-shadow:  0 4rpx 8rpx 0 rgba(227,232,236), 0 6px 20px 0 rgba(227,232,236);
  border-radius: 20rpx;
  padding: 0 25rpx 0rpx 25rpx;
}

.content .write{
  width: auto;
  height: auto;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
}

.content .title{
  font-weight: bold;
  font-size: 40rpx;
  font-family: Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;
  line-height: 40px;
}

.title::before {
  content: '|';
  color: #2a9e94;
  font-size: 25px;
  vertical-align: 0px;
  margin-right: 10px;
}

.breakline{
  background: #ddd;
  margin: 12px 0 6px 0;
  display: inline-block;
  width: 100%;
  height: 2px;
  vertical-align: middle;
}



